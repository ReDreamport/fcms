@import "../common.styl"

normalBgColor = #abd2ec // #d7ecfa
successBgColor = #97edb7 // #e1faea
warningBgColor = #f1deb5 //#fff3d9
errorBgColor = #f7e4e1 // #f7e4e1

.toast-box
    fixed(32px, 0, auto, 0)
    margin 0 auto
    z-index 1000
    display inline-block
    width 300px
    overflow auto
    font-size 14px

.toast
    padding 16px 16px
    margin-bottom 4px
    color #000

.toast-normal
    background normalBgColor

.toast-success
    background successBgColor

.toast-warning
    background warningBgColor

.toast-error
    background errorBgColor
